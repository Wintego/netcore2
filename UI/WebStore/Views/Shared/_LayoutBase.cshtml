    <environment exclude="Development">
        <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true">
    </environment>
    @RenderSection("Styles", false)
</head><!--/head-->

<body>

    @await Html.PartialAsync("Partial/_Header")
    @RenderBody()
    @await Html.PartialAsync("Partial/_Footer")

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/Cart/CartLogic.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js"></script>
    </environment>

    <script>
        $(function () {
            Cart.init({
                addToCartLink: "@Url.Action("AddToCartApi","Cart")",
                getCartViewLink: "@Url.Action("GetCartViewApi","Cart")",
                removeFromCartLink: "@Url.Action("RemoveFromCartApi","Cart")",
                decrementLink: "@Url.Action("DecrementFromCartApi","Cart")",
            });
        });
    </script>
    @RenderSection("Scripts", false)

</body>
</html>