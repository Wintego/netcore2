@model WebStore.Domain.ViewModels.Product.CatalogViewModel

@{
    Layout = "_Breadcrumbs";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSidebar")
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_FeaturesItems", Model.Products)
                <paging page-model="@Model.PageModel" page-action="Shop" page-url-SectionId="@Model.SectionId" page-url-BrandId="@Model.BrandId">

                </paging>
            </div>
        </div>
    </div> 
</section>