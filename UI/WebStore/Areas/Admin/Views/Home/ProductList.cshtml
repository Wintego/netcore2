@model WebStore.Domain.DTO.Product.PagedProductsDTO
@{
    ViewData["Title"] = "Список товаров";
}

    <p><a href="#" class="btn btn-primary">Создать новый</a></p>
    <table class="table">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(product => product.Products.First().Id)</td>
                <td>@Html.DisplayNameFor(product => product.Products.First().Name)</td>
                <td>@Html.DisplayNameFor(product => product.Products.First().Order)</td>
                @*<td>@Html.DisplayNameFor(product => product.SectionId)</td>
                <td>@Html.DisplayNameFor(product => product.BrandId)</td>*@
                <td>@Html.DisplayNameFor(product => product.Products.First().ImageUrl)</td>
                <td>@Html.DisplayNameFor(product => product.Products.First().Price)</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model.Products)
            {
            <tr>
                <td>@Html.DisplayFor(p => product.Id)</td>
                <td>@Html.DisplayFor(p => product.Name)</td>
                <td>@Html.DisplayFor(p => product.Order)</td>
                @*<td>@Html.DisplayFor(p => product.SectionId)</td>
                <td>@Html.DisplayFor(p => product.BrandId)</td>*@
                <td>@Html.DisplayFor(p => product.ImageUrl)</td>
                <td>@Html.DisplayFor(p => product.Price)</td>
                <td><a>Edit</a></td>
                <td><a>Details</a></td>
                <td><a class="text-danger">Delete</a></td>
            </tr>
            }
        </tbody>
    </table>